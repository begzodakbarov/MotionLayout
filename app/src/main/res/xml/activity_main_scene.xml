<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000">
       <KeyFrameSet>
       </KeyFrameSet>
        <OnSwipe motion:touchAnchorId="@+id/nestedScrollView2" />
    </Transition>

    <ConstraintSet android:id="@+id/start">
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            motion:layout_constraintStart_toEndOf="@+id/cardView3"
            android:layout_marginTop="20dp"
            motion:layout_constraintBottom_toTopOf="@+id/nestedScrollView2" />
        <Constraint
            android:layout_width="45dp"
            android:layout_height="45dp"
            motion:layout_constraintRight_toRightOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            android:id="@+id/search"
            motion:layout_constraintBottom_toTopOf="@+id/nestedScrollView2" />
        <Constraint
            android:layout_width="45dp"
            android:layout_height="45dp"
            motion:layout_constraintRight_toLeftOf="@id/search"
            motion:layout_constraintTop_toTopOf="parent"
            android:id="@+id/cardView4"
            motion:layout_constraintBottom_toTopOf="@+id/nestedScrollView2" />
        <Constraint
            android:layout_width="45dp"
            android:layout_height="45dp"
            motion:layout_constraintLeft_toLeftOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            android:id="@+id/cardView3"
            motion:layout_constraintBottom_toTopOf="@+id/nestedScrollView2" />
        <Constraint
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toTopOf="@+id/cardView3"
            motion:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="wrap_content"
            android:id="@+id/txt_name"
            motion:layout_constraintEnd_toStartOf="@+id/cardView4"
            android:layout_marginEnd="63dp"
            android:layout_marginRight="63dp"
            motion:layout_constraintBottom_toTopOf="@+id/nestedScrollView2"
            motion:layout_constraintStart_toEndOf="@+id/cardView3" />
        <Constraint
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/txt_name"
            motion:layout_constraintEnd_toStartOf="@+id/cardView4"
            motion:layout_constraintTop_toTopOf="@+id/cardView3"
            motion:layout_constraintBottom_toTopOf="@+id/nestedScrollView2"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            motion:layout_constraintStart_toEndOf="@+id/cardView3"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="10dp" />
        <Constraint
            motion:layout_constraintVertical_bias="0.0"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintHorizontal_bias="1.0"
            motion:layout_constraintLeft_toLeftOf="parent"
            motion:layout_constraintRight_toRightOf="parent"
            android:layout_width="match_parent"
            motion:layout_constraintTop_toBottomOf="@id/txt_name"
            android:id="@+id/nestedScrollView2" />
        <Constraint
            android:layout_width="match_parent"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintTop_toBottomOf="@id/txt_name"
            motion:layout_constraintLeft_toLeftOf="parent"
            motion:layout_constraintRight_toRightOf="parent"
            android:id="@+id/nestedScrollView2"
            android:layout_marginTop="20dp" />
    </ConstraintSet>
</MotionScene>